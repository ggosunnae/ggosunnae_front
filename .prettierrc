{
  "semi": false,
  "tabWidth": 2,
  "singleQuote": false,
  "printWidth": 100,
  "bracketSpacing": true,
  "trailingComma": "all",
  "arrowParens": "always",
  "plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"],
  "importOrder": [
    "^next",
    "^react",
    "<THIRD_PARTY_MODULES>",

    "^@asset/(.*)$",
    "^@libs/(.*)$",
    "^@components/(.*)$",
    "^@types/(.*)$",
    "^@hooks/(.*)$",
    "^@utils/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
